{
  "name": "3fc",
  "version": "0.1.0",
  "private": true,
  "description": "Three Sided Football Club web app monorepo",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "workspaces": [
    "app",
    "api",
    "packages/contracts"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "clean": "npm run clean --workspaces --if-present"
  },
  "devDependencies": {
    "@types/node": "^22.13.14",
    "typescript": "^5.7.3"
  }
}
